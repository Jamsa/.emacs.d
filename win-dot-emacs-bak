;; 从cygwin中的git编辑日志时将编码设置为utf-8
(add-hook 'find-file-hooks
	  (lambda ()
	    (if (numberp (string-match
			  ".git/COMMIT_EDITMSG"
			  (or buffer-file-name "")))
		(progn
		  (message "已将Git注释设置编码为utf-8")
		  (set-buffer-file-coding-system 'utf-8)))))

